<div class="container w-50">
  <div class="row">
    <div class="col-12">
      <div class="card mt-4">
        <div class="card-header">
          <h3 style="text-align: center;">Realizar Pergunta</h3>
        </div>
        <div class="card-body">
          <form method="post" action="/saveAsk" class="form-control">
            <label>Título</label>
            <input type="text" class="form-control" name="titulo" />
            <label>Descrição</label>
            <textarea
              placeholder="Escreve sua pergunta"
              class="form-control"
              name="descricao"
            ></textarea>
            <button type="submit" class="btn btn-success mt-3">Perguntar</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>