<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h3 style="text-align: center;">Realizar Pergunta</h3>
    </div>
    <div class="card-body">
      <form method="post" action="/createask" class="form-control">
        <label>Título</label>
        <input type="text" class="form-control" name="tituloPergunta" />
        <label>Descrição</label>
        <textarea
          placeholder="Escreve sua pergunta"
          class="form-control"
          name="descricaoPergunta"
        ></textarea>
        <button type="submit" class="btn btn-success mt-3">Perguntar</button>
      </form>
    </div>
  </div>
</div>